<section class="pet">

    <div class="menu-pet">
        <div class="btnAdicionar">
            <i class="fa-solid fa-wand-magic-sparkles"></i>
            <a href="/dashboard/pet/add"><p>Adicionar</p></a>
        </div>
    </div>

    <% listapet.forEach( pet => { %>
        <div class="pet_container">
            <div class="card-header">
                <div class="pet-image">
                    <span><i class="fa-solid fa-paw"></i></span>
                </div>
                <div class="pet-info">
                    <h2><%= pet.nome_pet %></h2>
                    <p><%= pet.raca.nome %></p>
                </div>
                <div class="pet-tipo">
                    <p><%=pet.tipo.nome%></p>
                </div>
                <div class="controles">
                    <a href="/dashboard/pet/update/<%=pet.id%>"><span class="botao editar"><i class="fa-solid fa-wand-magic-sparkles"></i></span></a>
                    <a href="/dashboard/pet/delete/<%=pet.id%>"><span class="botao excluir"><i class="fa-solid fa-trash-can"></i></span></a>
                </div>
            </div>
            <div class="pet-detalhes">
                <div class="detalhe-container">
                    <img class="img-detalhe" src="/img/pet-peso.png" alt="peso" >
                    <h3 class="titulo-detalhe">Peso</h3>
                    <p class="subtitulo-detalhe"><%=pet.peso.nome%></p>
                </div>
                <div class="detalhe-container">
                    <img class="img-detalhe" src="/img/pet-aniversario.png" alt="aniversario" >
                    <h3 class="titulo-detalhe">Aniversario</h3>
                    <p class="subtitulo-detalhe"><%=pet.datanasc_pet%></p>
                </div>
                <div class="detalhe-container">
                    <img class="img-detalhe" src="/img/pet-genero.png" alt="genero" >
                    <h3 class="titulo-detalhe">Genero</h3>
                    <p class="subtitulo-detalhe"><%=pet.genero.nome%></p>
                </div>
            </div>
        </div>
    <% }) %>
</section>